<h1>Songs Matching "<%= params[:search] %>"</h1>
<div class="row">
    <div class="col-md-12">
        <table>
            <% @result.each do |song| %>
            <tr>
                <td><img src="<%= song.album.images[0].to_h["url"] %>" height="50" width="auto"/></td>
                <td><%= song.name %></td>
                <td><%= song.album.name %></td>
                <td>
                <% song.artists.each do |artist| %>
                    <%= artist.name %>
                    <% end %>
                </td>
                <td>
                    <%= link_to artist_songs_path(@artist.id, "song"=>{:title => song.name, :status => :not_started, :spotify_url => song.id, :difficulty => 0}), method: :create do %>
                        <i class="fas fa-plus"></i>
                    <% end %>
                </td>
            </tr>
        <% end %>
        </table>
    </div>
</div>